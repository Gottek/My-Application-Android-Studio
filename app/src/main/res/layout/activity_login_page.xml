<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cool"
    tools:context=".ProfilePage">

        <Button
            android:id="@+id/btnEnregistrer"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="266dp"
            android:layout_height="55dp"
            android:text="S'enregistrer"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/textPrenom"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Jack"
            android:textColorHint="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/textNom"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"

            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Prenom"
            app:layout_constraintBottom_toBottomOf="@+id/textPrenom"
            app:layout_constraintEnd_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/textPrenom" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Adresse mail"
            android:textColor="@android:color/white"

            app:layout_constraintBottom_toBottomOf="@+id/textAdressemail"
            app:layout_constraintEnd_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/textAdressemail" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Mot de passe"
            android:textColor="@android:color/white"

            app:layout_constraintBottom_toBottomOf="@+id/textMotDePasse"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/textMotDePasse" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Nom"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textNom"
            app:layout_constraintEnd_toEndOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/textNom" />

        <EditText
            android:id="@+id/textNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:textColor="@android:color/white"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/white"
            android:hint="Francois"
            app:layout_constraintBottom_toTopOf="@+id/textAdressemail"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textPrenom" />

        <EditText
            android:id="@+id/textAdressemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="textEmailAddress"
            android:hint="jack@hotmail.com"
            app:layout_constraintBottom_toTopOf="@+id/textMotDePasse"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textNom" />

        <EditText
            android:id="@+id/textMotDePasse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:hint="******"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/textNumero"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textAdressemail" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Register"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintBottom_toTopOf="@+id/textPrenom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.49" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Numéro de téléphone"
            android:textColor="@android:color/white"

            app:layout_constraintBottom_toBottomOf="@+id/textNumero"
            app:layout_constraintEnd_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/textNumero" />

        <EditText
            android:id="@+id/textNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="phone"
            android:hint="0429494758"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/btnEnregistrer"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textMotDePasse" />


</androidx.constraintlayout.widget.ConstraintLayout>